
@model MovieAPP.Entity.UserModel

@{
    ViewData["Title"] = "Register";
}


<a asp-action="ShowUserDetails"  asp-controller="User">User Details</a>
<h1>Register</h1>

<form method="post">
    <div class="form-group">
        <label>FirstName</label><br />
        @Html.ValidationMessageFor(obj=>obj.FirstName,"",new { @style = "color:red" })
        <input type="text" class="form-control" Asp-for="FirstName" />
    </div>

    <div class="form-group">
        <label>LastName</label><br />
        @Html.ValidationMessageFor(obj => obj.LastName, "", new { @style = "color:red" })
        <input type="text" class="form-control" Asp-for="LastName" />
    </div>

    <div class="form-group">
        <label>Email</label><br />
        @Html.ValidationMessageFor(obj => obj.Email, "", new { @style = "color:red" })
        <input type="text" class="form-control" Asp-for="Email" />
    </div>



    <div class="form-group">
        <label>Password</label><br />
        @Html.ValidationMessageFor(obj => obj.Password, "", new { @style = "color:red" })
        <input type="text" class="form-control" Asp-for="Password" />
    </div>


    <div class="form-group">
        <label>Mobile</label><br />
        @Html.ValidationMessageFor(obj => obj.Mobile, "", new { @style = "color:red" })
        <input type="text" class="form-control" Asp-for="Mobile" />
    </div>



    <input type="submit" value="Register" class="btn btn-primary" />
    <input type="button" value="Reset" class="btn btn-secondary" />
</form>
@if (ViewBag.status == "Success")
{
    <div class="alert alert-success">@ViewBag.message</div>
}
else if(ViewBag.status == "Error")
{
  <div class="alert alert-danger">@ViewBag.message</div>
}


