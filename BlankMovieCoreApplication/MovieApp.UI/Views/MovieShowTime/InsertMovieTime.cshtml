
@model MovieAPP.Entity.MovieShowTimeModel

@{
    ViewData["Title"] = "InsertMovieTime";
}


<a asp-action="Index" asp-controller="MovieShowTime">Movie Show Details </a>
<h1>InsertMovieTime</h1>

<form method="post">
    <div class="form-group">
        <label>Movie</label>
      @*  <input type="text" class="form-control" Asp-for="MovieId" />*@

        <select asp-for="MovieId" asp-items="@(new SelectList(ViewBag.movieList,"Value","Text"))" class="form-control"></select>
     </div>

    <div class="form-group">
        <label>Theater</label>
        @*<input type="text" class="form-control" Asp-for="TheaterId" />*@

        <select asp-for="TheaterId" asp-items="@(new SelectList(ViewBag.theaterList,"Value","Text"))"  class="form-control"></select>
    </div>

    <div class="form-group">
        <label>ShowTime</label>
        <input type="time" class="form-control" Asp-for="ShowTime" />
    </div>



    <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control" Asp-for="Date" />
    </div>


    



    <input type="submit" value="Save" class="btn btn-primary" />
    <input type="button" value="Reset" class="btn btn-secondary" />
</form>
@if (ViewBag.status == "Success")
{
    <div class="alert alert-success">@ViewBag.message</div>
}
else if (ViewBag.status == "Error")
{
    <div class="alert alert-danger">@ViewBag.message</div>
}




